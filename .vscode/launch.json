{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Chrome with Extension",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:8080/popup.html", // URL for testing with Webpack dev server
        "webRoot": "${workspaceFolder}",
        "runtimeArgs": [
          "--disable-extensions-except=${workspaceFolder}",
          "--load-extension=${workspaceFolder}"
        ]
      },
      {
        "name": "Attach to Chrome Extension (Background)",
        "type": "chrome",
        "request": "attach",
        "port": 9222,
        "webRoot": "${workspaceFolder}"
      }
    ]
  }
  